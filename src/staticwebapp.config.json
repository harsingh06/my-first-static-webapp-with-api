{
    "trailingSlash": "auto",
    "routes": [
        {
        "route": "/images/*",
        "headers": {
            "cache-control": "must-revalidate, max-age=15770000"
        }
        },
      {
        "route": "/search.html",
        "methods": ["GET"],
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/api/*",
        "methods": ["GET", "POST"],
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/.auth/login/twitter",
        "statusCode": 404
      },
      {
        "route": "/.auth/login/github",
        "statusCode": 404
      },
      {
        "route": "/login",
        "redirect": ".auth/login/aad?post_login_redirect_uri=search.html"
      },
      {
        "route": "/logout",
        "redirect": "/.auth/logout?post_logout_redirect_uri=index.html"
      }
    ],
    "responseOverrides": {
        "401": {
          "redirect": "/index.html",
          "statusCode": 302
        },
        "403": {
          "rewrite": "/custom-forbidden-page.html"
        },
        "404": {
          "rewrite": "/404.html"
        }
    }
  }