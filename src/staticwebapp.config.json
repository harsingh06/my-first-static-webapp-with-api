{
    "trailingSlash": "auto",
    "routes": [
        {
        "route": "/images/*",
        "headers": {
            "cache-control": "must-revalidate, max-age=15770000"
        }
        },
      {
        "route": "/*",
        "methods": ["GET", "POST"],
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/.auth/login/twitter",
        "statusCode": 404
      },
      {
        "route": "/.auth/login/github",
        "statusCode": 404
      },
      {
        "route": "/logout",
        "redirect": "/.auth/logout"
      }
    ],
    "responseOverrides": {
        "401": {
          "redirect": "/.auth/login/aad",
          "statusCode": 302
        },
        "403": {
          "rewrite": "/custom-forbidden-page.html"
        },
        "404": {
          "rewrite": "/404.html"
        }
    }
  }